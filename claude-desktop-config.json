{
  "mcpServers": {
    "gcp-mcp-extended": {
      "command": "curl",
      "args": [
        "-X", "POST",
        "-H", "Content-Type: application/json",
        "-H", "Authorization: Bearer YOUR_CLOUD_RUN_AUTH_TOKEN",
        "-d", "@-",
        "https://gcp-mcp-XXXXX-uc.a.run.app/mcp"
      ],
      "env": {
        "GOOGLE_APPLICATION_CREDENTIALS": "/path/to/service-account-key.json"
      }
    },
    "gcp-mcp-local": {
      "command": "npm",
      "args": [
        "--silent",
        "--prefix",
        "/Users/aes/my-ai-projects/gcp-mcp-project",
        "start"
      ]
    }
  }
}